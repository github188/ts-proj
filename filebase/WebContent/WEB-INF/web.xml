<?xml version="1.0" encoding="UTF-8"?>
<web-app id="WebApp_ID" version="2.4" xmlns="http://java.sun.com/xml/ns/j2ee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/j2ee http://java.sun.com/xml/ns/j2ee/web-app_2_4.xsd">
	<display-name>
	TMVC Framework</display-name>
	
	<servlet>
		<servlet-name>FbAdminController</servlet-name>
		<servlet-class>tower.common.servlet.FileBaseAdminRootServlet</servlet-class>
		<init-param>
			<param-name>module</param-name>
			<param-value>fbadmin</param-value>
		</init-param>
		<load-on-startup>1</load-on-startup>
	</servlet>
	<servlet>
		<servlet-name>FbClientController</servlet-name>
		<servlet-class>tower.common.servlet.FileBaseRootServlet</servlet-class>
		<init-param>
			<param-name>module</param-name>
			<param-value>fbclient</param-value>
		</init-param>
		<load-on-startup>1</load-on-startup>
	</servlet>
	<servlet>
		<servlet-name>ServletFileDisplay</servlet-name>
		<servlet-class>tower.common.servlet.ServletFileDisplay</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>DownLoadFileServlet</servlet-name>
		<servlet-class>tower.common.servlet.DownLoadFileServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>FbAdminController</servlet-name>
		<url-pattern>/applications/fbadmin/ctrl</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>FbClientController</servlet-name>
		<url-pattern>/applications/fbclient/ctrl</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>ServletFileDisplay</servlet-name>
		<url-pattern>/WEB-INF/applications/sys/servlets/ServletFileDisplay</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>DownLoadFileServlet</servlet-name>
		<url-pattern>/WEB-INF/applications/fbclient/servlet/DownLoadFileServlet</url-pattern>
	</servlet-mapping>
	<welcome-file-list>
		<welcome-file>index.html</welcome-file>
		<welcome-file>index.htm</welcome-file>
		<welcome-file>index.jsp</welcome-file>
		<welcome-file>default.html</welcome-file>
		<welcome-file>default.htm</welcome-file>
		<welcome-file>default.jsp</welcome-file>
	</welcome-file-list>
</web-app>
